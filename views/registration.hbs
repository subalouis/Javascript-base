<body>
    <h1><b>
            <center> REGISTRATION FORM
        </b></center>
    </h1>

    <form action="/auth/registration" method="POST" style="margin-top: 5%;">
        <div class="container">
            <!-- userinputs -->
            <label>
                <center> Last Name :
            </label>
            <input type="text" placeholder="Enter Last Name" name="lastname" required>

            <label> First Name :</label>
            <input type="text" placeholder="Enter First Name" name="firstname" required>

            <label> Middle Initial</label>
            <input type="text" placeholder="Middle Initial e.g L. / D.C" name="middleinitial">

            <label>Student Number</label>
            <input type="text" placeholder="Enter Student Number" name="studentnumber">

            <label> Email</label>
            <input type="text" placeholder="email@domainname.com" name="email">

            <label> Username</label>
            <input type="text" placeholder="Username" name="username" required>

            <label> Password</label>
            <input type="password" placeholder="Password" name="password" required>

            <label> Confirm Password</center /label>
                <input type="password" placeholder=" Confirm Password" name="confirmpassword" required>

                <button type="submit">Sign up</button>

                {{#if message}}
                <h4 class='alert alert-danger mt-4'>{{message}} <br> click <a href="/">here</a> to log in</h4>
                {{/if}}

                {{#if message5}}
                <h4 class='alert alert-danger mt-4'>{{message5}} </h4>
                {{/if}}

                <center>
                    <input type="checkbox" checked="checked"> Remember me
                    <br><br>
                    <a href="/admin"> <button type="button" class="cancelbtn" method="POST">ADMINISTRATOR LOGIN</button>
                     <a href="/"> <button type="button" class="cancelbtn" method="POST">USER LOGIN</button>
                    </a>

                </center>

        </div>
    </form>
